<%= form_for @video, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :title, :class => 'control-label' %>
    <%= f.text_field :title, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :user, :class => 'control-label' %>
    <%= f.text_field :user, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :url, :class => 'control-label' %>
    <%= f.text_field :url, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :num_of_plays, :class => 'control-label' %>
    <%= f.number_field :num_of_plays, :class => 'form-control' %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                videos_path, :class => 'btn' %>
  </div>
<% end %>
